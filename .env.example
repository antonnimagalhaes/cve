NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-chave-anonima-do-supabase

# OpenAI - Para o módulo "IA Professor"
NEXT_PUBLIC_OPENAI_API_KEY=sua-chave-da-openai

# Panda Video - Para hospedagem e streaming de vídeos
NEXT_PUBLIC_PANDAVIDEO_API_KEY=sua-chave-do-pandavideo

# OneSignal - Para notificações push (web e mobile)
NEXT_PUBLIC_ONESIGNAL_KEY=sua-chave-do-onesignal
